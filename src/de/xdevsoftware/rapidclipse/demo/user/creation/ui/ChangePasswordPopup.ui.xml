<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?xdevuiml version="1.0"?>
<?template BROWSER_XGA?>
<?import com.xdev.ui.XdevButton?>
<?import com.xdev.ui.XdevGridLayout?>
<?import com.xdev.ui.XdevHorizontalLayout?>
<?import com.xdev.ui.XdevPasswordField?>
<?import com.xdev.ui.XdevView?>
<XdevView xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="ChangePasswordPopup">
    <x:constraints zpos="0" width="100%" height="100%" />
    <XdevGridLayout x:name="gridLayout">
        <x:constraints zpos="0" width="100%" height="100%" />
        <XdevPasswordField columns="5" caption="Old Password" x:name="txtOldPassword">
            <x:constraints gridx="1" gridy="1" weighty="0.0" weightx="0.1" width="100%" />
        </XdevPasswordField>
        <XdevPasswordField columns="5" caption="New Password" x:name="txtNewPassword">
            <x:constraints gridx="1" gridy="2" weighty="0.0" weightx="0.1" width="100%" />
        </XdevPasswordField>
        <XdevPasswordField columns="5" caption="Repeat Password" x:name="txtRepeatPassword">
            <x:constraints gridx="1" gridy="3" weighty="0.0" weightx="0.1" width="100%" />
        </XdevPasswordField>
        <XdevHorizontalLayout x:name="horizontalLayout" margin="">
            <x:constraints gridx="1" gridy="4" weighty="0.0" weightx="0.1" alignment="MIDDLE_RIGHT" />
            <XdevButton caption="Cancel" x:name="cmdCancel">
                <x:constraints weightx="0.0" />
                <x:event>click.buttonClick</x:event>
            </XdevButton>
            <XdevButton caption="Confirm" styleName="primary" x:name="cmdConfirm">
                <x:constraints weightx="0.0" />
                <x:event>click.buttonClick</x:event>
            </XdevButton>
        </XdevHorizontalLayout>
    </XdevGridLayout>
</XdevView>

